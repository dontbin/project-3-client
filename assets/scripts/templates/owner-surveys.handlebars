
{{#each surveys as |survey|}}

  <section class='owner-survey'  data-id="{{survey._id}}">

    <div class="content">
    <!-- Flipping modal -->
    <div class="widget-box sample-widget">
      <div class="flip-box">
        <div class="flip-box-inner">
          <div class="flip-box-front">
            <h2>{{survey.title}}</h2>
          </div>
          <div class="flip-box-back">
            <h2>{{survey.question}}</h2>
            <div id="results-{{survey._id}}" class="hidden"></div>
            <button type='submit' class="remove_button btn btn-success">Delete</button>
          </div>
        </div>
      </div>
    </div>
  </div>

    <!-- <h2>{{survey.title}}</h2>
    <button type='submit' class="remove_button col btn btn-primary">Delete this survey</button>
    <hr> -->
  </section>
{{/each}}
