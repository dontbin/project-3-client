

{{#each surveys as |survey|}}

  <section class='owner-survey'  data-id="{{survey._id}}">


    <!-- Flipping modal -->
    <div class="widget-box sample-widget">
      <div class="flip-box">
        <div class="flip-box-inner">
          <div class="flip-box-front">
            <h2>{{survey.title}}</h2>
          </div>
          <div class="flip-box-back">
            <button type='submit' class="remove_button btn btn-danger">Delete</button>
            <h4>{{survey.question}}</h4>
            <div id="results-{{survey._id}}"></div>
            <canvas id="myChart-{{survey._id}}" class="myChart"></canvas>
          </div>
        </div>
      </div>
    </div>


  </section>
{{/each}}
